#include <iostream>
#include <vector>
#include <string>
using namespace std;

class User {
public:
    string username;
    string email;
    string password;

    User(string u, string e, string p) : username(u), email(e), password(p) {}
};

class HammerBakery {
private:
    vector<User> users;
    User* loggedInUser;

public:
    HammerBakery() {
        loggedInUser = nullptr;
    }

    void signUp() {
        string username, email, password;
        cout << "\n+------------------ Sign Up ------------------+\n";
        cout << "Enter username: ";
        cin >> username;
        cout << "Enter email: ";
        cin >> email;
        cout << "Enter password: ";
        cin >> password;
        users.push_back(User(username, email, password));
        loggedInUser = &users.back(); // Log in the user immediately after sign up
        cout << "Sign up successful.\n";
    }

    void login() {
        string email, password;
        cout << "\n+------------------- Login -------------------+\n";
        cout << "Enter email: ";
        cin >> email;
        cout << "Enter password: ";
        cin >> password;
        for (auto& user : users) {
            if (user.email == email && user.password == password) {
                loggedInUser = &user;
                cout << "Login successful. Welcome " << user.username << "!\n";
                return;
            }
        }
        cout << "Invalid email or password.\n";
    }

    User* getLoggedInUser() {
        return loggedInUser;
    }
};




